<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="128dp"
                android:layout_height="128dp"
                tools:background="@android:color/darker_gray" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="100dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="100dp" android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <EditText
                android:id="@+id/et_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#D8D8D8"
                android:textColor="#D8D8D8"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="20sp"
                android:hint="Name" app:layout_constraintTop_toBottomOf="@+id/iv_icon"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"/>

        <EditText
                android:id="@+id/et_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#D8D8D8"
                android:textColor="#D8D8D8"
                android:ellipsize="end"
                android:singleLine="true"
                android:textSize="20sp"
                android:hint="Status" app:layout_constraintTop_toBottomOf="@+id/et_name"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

        <TextView
                android:id="@+id/tv_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-medium"
                android:text="Save"
                android:textAllCaps="true"
                android:textColor="#0F6BFB"
                android:textSize="16sp" app:layout_constraintTop_toBottomOf="@+id/et_status"
                android:layout_marginEnd="24dp" app:layout_constraintEnd_toStartOf="@+id/tv_cancel"
                android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:fontFamily="sans-serif-medium"
                android:text="Cansel"
                android:textAllCaps="true"
                android:textColor="#0F6BFB"
                android:textSize="16sp" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_status" android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</layout>